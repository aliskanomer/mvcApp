@model myBudget.Entity.expences

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <span class="d-flex justify-content-start"> @Html.ActionLink(" ", "Index", null, new { @class = "fas fa-chevron-left fa-3x" })</span>
    <h1 class="d-flex justify-content-center">Edit</h1>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="formContainer">
        @Html.ValidationSummary(true, "", new { @class = "text-secondary" })
        @Html.HiddenFor(model => model.Id)

        <div class="formGroup">
            @Html.LabelFor(model => model.expenceName, htmlAttributes: new { @class = "formLabel" })
            <div>
                @Html.EditorFor(model => model.expenceName, new { htmlAttributes = new { @class = "textInput" } })
                @Html.ValidationMessageFor(model => model.expenceName, "", new { @class = "valMsg" })
            </div>
        </div>

        <div class="formGroup">
            @Html.LabelFor(model => model.expenceAmount, htmlAttributes: new { @class = "formLabel" })
            <div>
                @Html.EditorFor(model => model.expenceAmount, new { htmlAttributes = new { @class = "textInput" } })
                @Html.ValidationMessageFor(model => model.expenceAmount, "", new { @class = "valMsg" })
            </div>
        </div>

        <div class="formGroup">
            <button type="submit">Save</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
